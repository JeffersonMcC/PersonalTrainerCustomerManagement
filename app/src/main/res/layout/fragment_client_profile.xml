<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/client_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:contentDescription="@string/client_profile_image_description"
            android:scaleType="centerInside"
            android:cropToPadding="true"/>

        <ImageButton
            android:id="@+id/client_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_below="@id/client_photo"
            android:layout_alignLeft="@id/client_photo"
            android:layout_alignStart="@id/client_photo"
            android:layout_alignRight="@id/client_photo"
            android:layout_alignEnd="@id/client_photo"/>

        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/client_photo"
            android:layout_toRightOf="@id/client_photo"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:hint="@string/client_name_hint"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>