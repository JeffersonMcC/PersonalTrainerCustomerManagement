    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/phone_contact_icon_image_button"
            android:src="@drawable/phone_call"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Phone:"
            android:id="@+id/credit_card_payment_label"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/phone_contact_icon_image_button"
            android:layout_toEndOf="@id/phone_contact_icon_image_button"
            android:layout_marginTop="22dp"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/email_icon_image_view"
            android:src="@drawable/e_mail_envelope"
            android:scaleType="fitXY"
            android:layout_below="@id/phone_contact_icon_image_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email:"
            android:id="@+id/cash_payment_label"
            android:layout_alignTop="@+id/email_icon_image_view"
            android:layout_toRightOf="@id/email_icon_image_view"
            android:layout_toEndOf="@id/email_icon_image_view"
            android:layout_marginTop="21dp"/>

    </RelativeLayout>

