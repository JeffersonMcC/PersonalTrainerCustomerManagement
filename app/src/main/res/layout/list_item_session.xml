<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/list_item_session_completed_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_session_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_session_completed_check_box"
        android:layout_toStartOf="@id/list_item_session_completed_check_box"
        android:padding="4dp"
        tools:text="Date of next session"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_item_session_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_session_date_text_view"
        android:layout_toLeftOf="@id/list_item_session_completed_check_box"
        android:layout_toStartOf="@id/list_item_session_completed_check_box"
        android:padding="4dp"
        tools:text="Session title"/>

</RelativeLayout>